<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://xmlns.jcp.org/xml/ns/javaee/web-app.xsd"
	version="2.5">
	<display-name>News-app</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.diomov.newsportal.controller.Controller
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/Controller</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>encodingfilter</filter-name>
		<filter-class>by.diomov.newsportal.filter.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>authorizationfilter</filter-name>
		<filter-class>
			by.diomov.newsportal.filter.AuthorizationFilter
			<servlet-name>Controller</servlet-name>
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>authorizationfilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>
		
	<filter>
		<filter-name>uservalidatorfilter</filter-name>
		<filter-class>
			by.diomov.newsportal.filter.UserValidatorFilter
			<servlet-name>Controller</servlet-name>
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>uservalidatorfilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>
		
	<listener>
		<listener-class>
			by.diomov.newsportal.listener.SessionListener
		</listener-class>
	</listener>

	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

</web-app>